generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model user_requester {
  id         String  @id @default(uuid())
  name       String
  email      String  @unique
  password   String
  cpf        String  @unique
  phone      String  @unique
  address    String
  active     Boolean @default(true)
  resetToken String? 

  emergencies emergency[]
}

model user_attendant {
  id         String  @id @default(uuid())
  name       String
  email      String  @unique
  password   String
  service    Service
  active     Boolean @default(true)
  resetToken String? // ðŸ”¹ Campo opcional para recuperaÃ§Ã£o de senha

  emergencies emergency[]
}

model emergency {
  id               String          @id @default(uuid())
  requester        user_requester  @relation(fields: [user_requesterId], references: [id])
  attendant        user_attendant? @relation(fields: [user_attendantId], references: [id])
  type             Service
  description      String
  status           Status
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt
  user_requesterId String
  user_attendantId String?
}

enum Service {
  POLICE
  FIREMAN
  MEDIC
}

enum Status {
  CREATED
  ACTIVE
  FINISHED
}
